{
    "manifest_version": 2,
    "name": "Pomodoro Timer",
    "version": "1.0",
    "description": "A Pomodoro Technique timer extension",
    "permissions": ["storage"],
    "browser_action": {
      "default_icon": "images/Lightning_Mcqueen.png",
      "default_popup": "popup.html"
    },
    "icons": {
      "48": "images/Lightning_Mcqueen.png"
    },
    "background": {
      "scripts": ["popup.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["popup.js"]
      }
    ]
  }
  